CeruleanCave_SecretChamber_B2F_MapScripts::
	.byte 0

CeruleanCave_SecretChamber_B2F_Lilith::
	lock
	checktrainerflag TRAINER_AMY
	goto_if_eq CeruleanCave_SecretChamber_B2F_EventScript_Rematch2Lilith
	checktrainerflag TRAINER_LILITH
	goto_if_eq CeruleanCave_SecretChamber_B2F_EventScript_RematchLilith
	trainerbattle_single TRAINER_LILITH, CeruleanCave_SecretChamber_B2F_Text_LilithIntro, CeruleanCave_SecretChamber_B2F_Text_LilithDefeat, CeruleanCave_SecretChamber_B2F_EventScript_DefeatedLilith, NO_MUSIC
CeruleanCave_SecretChamber_B2F_EventScript_DefeatedLilith::
	lockall
	msgbox CeruleanCave_SecretChamber_B2F_Text_LilithPostBattle, MSGBOX_NPC
	call EventScript_OutOfCenterPartyHeal
	msgbox CeruleanCave_SecretChamber_B2F_Text_ShopIntro
	pokemart CeruleanCave_SecretChamber_B2F_Items
	msgbox CeruleanCave_SecretChamber_B2F_Text_ShopOutro
	applymovement LOCALID_LILITH, CeruleanCave_SecretChamber_B2F_Movement_LilithExit
	waitmovement 0
	setflag FLAG_TEMP_E @ Hide Lilith until map reload
	removeobject LOCALID_LILITH
	releaseall
	end
CeruleanCave_SecretChamber_B2F_EventScript_RematchLilith::
	cleartrainerflag TRAINER_LILITH
	trainerbattle_single TRAINER_LILITH, CeruleanCave_SecretChamber_B2F_Text_LilithRematchIntro, CeruleanCave_SecretChamber_B2F_Text_LilithDefeat, CeruleanCave_SecretChamber_B2F_EventScript_DefeatedLilith, NO_MUSIC
	goto CeruleanCave_SecretChamber_B2F_EventScript_DefeatedLilith
	end
CeruleanCave_SecretChamber_B2F_EventScript_Rematch2Lilith::
	cleartrainerflag TRAINER_LILITH
	trainerbattle_single TRAINER_LILITH, CeruleanCave_SecretChamber_B2F_Text_LilithRematch2Intro, CeruleanCave_SecretChamber_B2F_Text_LilithDefeat, CeruleanCave_SecretChamber_B2F_EventScript_DefeatedLilith, NO_MUSIC
	goto CeruleanCave_SecretChamber_B2F_EventScript_DefeatedLilith
	end

	.align 2
