CeruleanCave_SecretChamber_B3F_MapScripts::
	.byte 0

CeruleanCave_SecretChamber_B3F_Molly::
	lock
	checktrainerflag TRAINER_AMY
	goto_if_eq CeruleanCave_SecretChamber_B3F_EventScript_Rematch2Molly
	checktrainerflag TRAINER_MOLLY
	goto_if_eq CeruleanCave_SecretChamber_B3F_EventScript_RematchMolly
	trainerbattle_single TRAINER_MOLLY, CeruleanCave_SecretChamber_B3F_Text_MollyIntro, CeruleanCave_SecretChamber_B3F_Text_MollyDefeat, CeruleanCave_SecretChamber_B3F_EventScript_DefeatedMolly, NO_MUSIC
CeruleanCave_SecretChamber_B3F_EventScript_DefeatedMolly::
	lockall
	msgbox CeruleanCave_SecretChamber_B3F_Text_MollyPostBattle, MSGBOX_NPC
	call EventScript_OutOfCenterPartyHeal
	msgbox CeruleanCave_SecretChamber_B3F_Text_MollyPostHeal, MSGBOX_NPC
	msgbox CeruleanCave_SecretChamber_B3F_Text_MollyTeach, MSGBOX_YESNO
	goto_if_eq VAR_RESULT, NO, CeruleanCave_SecretChamber_B3F_EventScript_MollyPostTeach
	msgbox CeruleanCave_SecretChamber_B3F_Text_MollyWhichMon
	setvar VAR_0x8005, MOVE_MAIL_SCRIPT
	call EventScript_ChooseMoveTutorMon
	goto_if_eq VAR_RESULT, FALSE, CeruleanCave_SecretChamber_B3F_EventScript_MollyPostTeach
CeruleanCave_SecretChamber_B3F_EventScript_MollyPostTeach::
	msgbox CeruleanCave_SecretChamber_B3F_Text_MollyPostTeach, MSGBOX_NPC
	applymovement LOCALID_MOLLY, CeruleanCave_SecretChamber_B3F_Movement_MollyExit
	waitmovement 0
	setflag FLAG_TEMP_E @ Hide Molly until map reload
	removeobject LOCALID_MOLLY
	releaseall
	end
CeruleanCave_SecretChamber_B3F_EventScript_RematchMolly::
	cleartrainerflag TRAINER_MOLLY
	trainerbattle_single TRAINER_MOLLY, CeruleanCave_SecretChamber_B3F_Text_MollyRematchIntro, CeruleanCave_SecretChamber_B3F_Text_MollyDefeat, CeruleanCave_SecretChamber_B3F_EventScript_DefeatedMolly, NO_MUSIC
	goto CeruleanCave_SecretChamber_B3F_EventScript_DefeatedMolly
	end
CeruleanCave_SecretChamber_B3F_EventScript_Rematch2Molly::
	cleartrainerflag TRAINER_MOLLY
	trainerbattle_single TRAINER_MOLLY, CeruleanCave_SecretChamber_B3F_Text_MollyRematch2Intro, CeruleanCave_SecretChamber_B3F_Text_MollyDefeat, CeruleanCave_SecretChamber_B3F_EventScript_DefeatedMolly, NO_MUSIC
	goto CeruleanCave_SecretChamber_B3F_EventScript_DefeatedMolly
	end

CeruleanCave_SecretChamber_B3F_Movement_MollyExit::
	walk_left
	walk_left
	walk_left
	walk_left
	step_end

