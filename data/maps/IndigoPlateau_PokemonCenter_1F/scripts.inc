	release
	end

IndigoPlateau_PokemonCenter_1F_EventScript_Nurse::
	lock
	faceplayer
	call EventScript_PkmnCenterNurse
	release
	end

IndigoPlateau_PokemonCenter_1F_EventScript_Juliana::
	checktrainerflag TRAINER_EMILY
	goto_if_ne IndigoPlateau_PokemonCenter_1F_EventScript_JulianaBeatEmilyFirst
	goto IndigoPlateau_PokemonCenter_1F_EventScript_JulianaPrerequisitesMet
	end

IndigoPlateau_PokemonCenter_1F_EventScript_JulianaBeatEmilyFirst::
	msgbox IndigoPlateau_PokemonCenter_1F_Text_JulianaBeatEmilyFirst, MSGBOX_NPC
	end

IndigoPlateau_PokemonCenter_1F_EventScript_JulianaPrerequisitesMet::
	checktrainerflag TRAINER_JULIANA
	goto_if_eq IndigoPlateau_PokemonCenter_1F_EventScript_RematchJuliana
	trainerbattle_single TRAINER_JULIANA, IndigoPlateau_PokemonCenter_1F_Text_JulianaIntro, IndigoPlateau_PokemonCenter_1F_Text_JulianaDefeat, IndigoPlateau_PokemonCenter_1F_EventScript_DefeatedJuliana, NO_MUSIC
IndigoPlateau_PokemonCenter_1F_EventScript_DefeatedJuliana::
	msgbox IndigoPlateau_PokemonCenter_1F_Text_JulianaPostBattle, MSGBOX_NPC
	goto_if_unset FLAG_GOT_TR100_FROM_JULIANA, IndigoPlateau_PokemonCenter_1F_EventScript_GetTR100FromJuliana
	end
IndigoPlateau_PokemonCenter_1F_EventScript_RematchJuliana::
	cleartrainerflag TRAINER_JULIANA
	trainerbattle_single TRAINER_JULIANA, IndigoPlateau_PokemonCenter_1F_Text_JulianaRematchIntro, IndigoPlateau_PokemonCenter_1F_Text_JulianaDefeat, IndigoPlateau_PokemonCenter_1F_EventScript_DefeatedJuliana, NO_MUSIC
	goto IndigoPlateau_PokemonCenter_1F_EventScript_DefeatedJuliana
	end
IndigoPlateau_PokemonCenter_1F_EventScript_GetTR100FromJuliana::
	checkitemspace ITEM_TM_PHOENIX_CALL, 5
	goto_if_eq VAR_RESULT, FALSE, IndigoPlateau_PokemonCenter_1F_EventScript_JulianaEnd
	msgbox IndigoPlateau_PokemonCenter_1F_Text_JulianaPreTR100, MSGBOX_NPC
	giveitem_msg IndigoPlateau_PokemonCenter_1F_Text_JulianaGotTR100, ITEM_TM_PHOENIX_CALL, 5
	setflag FLAG_GOT_TR100_FROM_JULIANA
	msgbox IndigoPlateau_PokemonCenter_1F_Text_JulianaPostTR100, MSGBOX_NPC
IndigoPlateau_PokemonCenter_1F_EventScript_JulianaEnd::
	end

