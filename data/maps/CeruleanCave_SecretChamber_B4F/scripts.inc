CeruleanCave_SecretChamber_B4F_MapScripts::
	.byte 0

CeruleanCave_SecretChamber_B4F_Natalie::
	lock
	checktrainerflag TRAINER_AMY
	goto_if_eq CeruleanCave_SecretChamber_B4F_EventScript_Rematch2Natalie
	checktrainerflag TRAINER_NATALIE
	goto_if_eq CeruleanCave_SecretChamber_B4F_EventScript_RematchNatalie
	trainerbattle_single TRAINER_NATALIE, CeruleanCave_SecretChamber_B4F_Text_NatalieIntro, CeruleanCave_SecretChamber_B4F_Text_NatalieDefeat, CeruleanCave_SecretChamber_B4F_EventScript_DefeatedNatalie, NO_MUSIC
CeruleanCave_SecretChamber_B4F_EventScript_DefeatedNatalie::
	lockall
	msgbox CeruleanCave_SecretChamber_B4F_Text_NataliePostBattle, MSGBOX_NPC
	call EventScript_OutOfCenterPartyHeal
	msgbox CeruleanCave_SecretChamber_B4F_Text_NataliePostHeal, MSGBOX_NPC
	msgbox CeruleanCave_SecretChamber_B4F_Text_NatalieTeach, MSGBOX_YESNO
	goto_if_eq VAR_RESULT, NO, CeruleanCave_SecretChamber_B4F_EventScript_NataliePostTeach
	msgbox CeruleanCave_SecretChamber_B4F_Text_NatalieWhichMon
	setvar VAR_0x8005, MOVE_MAIL_SCRIPT
	call EventScript_ChooseMoveTutorMon
	goto_if_eq VAR_RESULT, FALSE, CeruleanCave_SecretChamber_B4F_EventScript_NataliePostTeach
CeruleanCave_SecretChamber_B4F_EventScript_NataliePostTeach::
	msgbox CeruleanCave_SecretChamber_B4F_Text_NataliePostTeach, MSGBOX_NPC
	applymovement LOCALID_NATALIE, CeruleanCave_SecretChamber_B4F_Movement_NatalieExit
	waitmovement 0
	setflag FLAG_TEMP_E @ Hide Natalie until map reload
	removeobject LOCALID_NATALIE
	releaseall
	end
CeruleanCave_SecretChamber_B4F_EventScript_RematchNatalie::
	cleartrainerflag TRAINER_NATALIE
	trainerbattle_single TRAINER_NATALIE, CeruleanCave_SecretChamber_B4F_Text_NatalieRematchIntro, CeruleanCave_SecretChamber_B4F_Text_NatalieDefeat, CeruleanCave_SecretChamber_B4F_EventScript_DefeatedNatalie, NO_MUSIC
	goto CeruleanCave_SecretChamber_B4F_EventScript_DefeatedNatalie
	end
CeruleanCave_SecretChamber_B4F_EventScript_Rematch2Natalie::
	cleartrainerflag TRAINER_NATALIE
	trainerbattle_single TRAINER_NATALIE, CeruleanCave_SecretChamber_B4F_Text_NatalieRematch2Intro, CeruleanCave_SecretChamber_B4F_Text_NatalieDefeat, CeruleanCave_SecretChamber_B4F_EventScript_DefeatedNatalie, NO_MUSIC
	goto CeruleanCave_SecretChamber_B4F_EventScript_DefeatedNatalie
	end

CeruleanCave_SecretChamber_B4F_Movement_NatalieExit::
	walk_right
	walk_right
	walk_right
